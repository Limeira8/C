#include <stdio.h>
#include <string.h>

#define MAX_VENDAS 10
#define MAX_NOME 41
#define MAX_CIDADE 31

typedef struct {
    char cliente[MAX_NOME];
    int qtdprod;
    float valortotal;
    char destino[MAX_CIDADE];
} Venda;

int main() {
    Venda vendas[MAX_VENDAS];
    int cont_vendas = 0;
    float total_valorvendas = 0;
    int total_qtdprodutos = 0;
    float maiorvenda = 0;
    char cliente_maiorvenda[MAX_NOME] = "";
    char cidade_maiorvenda[MAX_CIDADE] = "";

    while (cont_vendas < MAX_VENDAS) {
        scanf(" %[^\n]%*c", vendas[cont_vendas].cliente);

        if (strcmp(vendas[cont_vendas].cliente, "encerrar") == 0) {
            break;
        }

        scanf("%d", &vendas[cont_vendas].qtdprod);

        scanf("%f", &vendas[cont_vendas].valortotal);

        scanf(" %[^\n]%*c", vendas[cont_vendas].destino);

        if (vendas[cont_vendas].valortotal > maiorvenda) {
            maiorvenda = vendas[cont_vendas].valortotal;
            strcpy(cliente_maiorvenda, vendas[cont_vendas].cliente);
            strcpy(cidade_maiorvenda, vendas[cont_vendas].destino);
        }

        total_valorvendas += vendas[cont_vendas].valortotal;
        total_qtdprodutos += vendas[cont_vendas].qtdprod;

        cont_vendas++;
    }

    printf("Quantidade vendida: %d\n", total_qtdprodutos);
    printf("Valor arrecadado: %.2f\n", total_valorvendas);
    if (cont_vendas > 0) {
        printf("%s\n", cliente_maiorvenda);
        printf("%s\n", cidade_maiorvenda);
    } else {
        printf("Nenhuma venda registrada.\n");
    }

    return 0;
}
